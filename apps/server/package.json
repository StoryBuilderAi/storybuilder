{
  "name": "server",
  "version": "1.0.0",
  "description": "Express server for StoryBuilder",
  "main": "server.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
